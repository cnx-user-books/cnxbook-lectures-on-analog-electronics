    <para id="id1170026161460">Thus:</para>
    <figure id="id1170024828891">
      <media id="id1170024828891_media" alt="">
        <image mime-type="image/png" src="../../media/graphics37-35b4.png" id="id1170024828891__onlineimage" height="26" width="206"/>
      </media>
    </figure>
    <para id="id1170026310173">Where: <figure id="id1170026387010"><media id="id1170026387010_media" alt=""><image mime-type="image/png" src="../../media/graphics38-cc02.png" id="id1170026387010__onlineimage" height="26" width="369"/></media></figure> = <figure id="id1170027146749"><media id="id1170027146749_media" alt=""><image mime-type="image/png" src="../../media/graphics39-4dc9.png" id="id1170027146749__onlineimage" height="40" width="35"/></media></figure></para>
    <figure id="id1170023970018">
      <media id="id1170023970018_media" alt="">
        <image mime-type="image/png" src="../../media/graphics40-3084.png" id="id1170023970018__onlineimage" height="56" width="226"/>
      </media>
    </figure>
    <figure id="id1170021775658">
      <media id="id1170021775658_media" alt="">
        <image mime-type="image/png" src="../../media/graphics41-abec.png" id="id1170021775658__onlineimage" height="53" width="221"/>
