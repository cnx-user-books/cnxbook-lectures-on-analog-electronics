    <para id="id1167775830636">           ( 1)</para>
    <figure id="id4667786">
      <media id="id4667786_media" alt="">
        <image mime-type="image/png" src="../../media/graphics4-e435.png" id="id4667786__onlineimage" height="38" width="60"/>
      </media>
